<body>
  <section id="todoapp">
    <header id="header">
      <h1>todos</h1>
      <input id="new-todo" placeholder="What needs to be done?" autofocus>
    </header>
    <section id="main">
      <input id="toggle-all" type="checkbox">
      <label all as complete></label>
      <ul id="todo-list"></ul>
    </section>
    <footer id="footer"><span id="todo-count"></span>
      <ul id="filters">
        <li><a href="#/" class="filters-none selected">All</a></li>
        <li><a href="#/active" class="filters-active">Active</a></li>
        <li><a href="#/completed" class="filters-completed">Completed</a></li>
      </ul>
      <button id="clear-completed">Clear completed (<span>1</span>)</button>
    </footer>
  </section>
  <footer id="info">
    <p>Double-click to edit a todo</p>
    <p>Originally part of <a href="http://todomvc.com">TodoMVC</a></p>
  </footer>
</body>